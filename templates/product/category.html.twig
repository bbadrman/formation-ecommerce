{% extends "base.html.twig" %}

{% block title %}
	Catégorie :
	{{ category.name }}
{% endblock %}

{% block body %}

<ol class="breadcrumb">
  <li class="breadcrumb-item"><a href="#">Accueil</a></li>
  <li class="breadcrumb-item active"> {{ category.name }}</li>
</ol>

	<h1>Catégorie :
		{{ category.name }}</h1>
	<div class="row">
		{% for p in category.products %}
			<div class="col-3">
				<div class="card">
					<img src="{{p.mainPicture}}" class="img-fluid" alt="Image de produit">
					<div class="card-body">
						<h4 class="card-title">{{p.name}}
							({{p.price / 100}}
							Dhs)</h4>

						<span class="btn btn-info">

							{{ p.category.name }}

						</span>
						<p class="card-text">{{p.shortDescription}}</p>
						<a href="#" class="btn btn-primary btn-sm">Détails</a>
						<a href="#" class="btn btn-success btn-sm">Ajouter</a>

					</div>
				</div>
			</div>
		{% endfor %}
	</div>
{% endblock %}
